<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card-shadow">
                <div class="card-header bg-warning">
                    <h3 class="text-light">UPDATE AVAILABLE PRODUCT</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/update/<%= product._id %>" method="post" id="add-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name">Name</label>
                            <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter name" value="<%= product.name %>" required />
                        </div>
                        <div class="mb-3">
                            <label for="price">Price</label>
                            <input type="number" name="price" class="form-control form-control-lg" placeholder="Enter price" value="<%= product.price %>" required />
                        </div>
                        <div class="mb-3">
                            <label for="quantity">Quantity</label>
                            <input type="number" name="quantity" class="form-control form-control-lg" placeholder="Quantity" value="<%= product.quantity %>" required />
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Select image</label>
                            <input class="form-control form-control-lg" type="file" name="image" />
                            <img src="/<%= product.image %>" width="150" class="img-thumbnail mt-1">
                        </div>
                        <input type="hidden" name="old_image" value="<%= product.name %>">
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Update" class="btn btn-warning btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>